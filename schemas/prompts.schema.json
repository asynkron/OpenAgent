{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://openagent/schemas/prompts.schema.json",
  "title": "Prompt manifest",
  "type": "object",
  "required": ["prompts"],
  "additionalProperties": false,
  "properties": {
    "prompts": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "canonical", "copies"],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1,
            "pattern": "^[a-z0-9-]+$"
          },
          "canonical": {
            "type": "string",
            "minLength": 1
          },
          "copies": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            },
            "uniqueItems": true
          },
          "notes": {
            "type": "string"
          }
        }
      },
      "uniqueItems": true
    }
  }
}

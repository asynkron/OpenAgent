{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://openagent/schemas/shortcuts.schema.json",
  "title": "Command shortcuts",
  "type": "array",
  "items": {
    "type": "object",
    "additionalProperties": false,
    "required": ["id", "name", "command", "tags"],
    "properties": {
      "id": {
        "type": "string",
        "minLength": 1
      },
      "name": {
        "type": "string",
        "minLength": 1
      },
      "description": {
        "type": "string"
      },
      "command": {
        "type": "string",
        "minLength": 1
      },
      "tags": {
        "type": "array",
        "items": {
          "type": "string",
          "minLength": 1
        },
        "uniqueItems": true
      }
    }
  }
}

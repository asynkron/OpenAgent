{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://openagent/schemas/templates.schema.json",
  "title": "Command templates",
  "type": "array",
  "items": {
    "type": "object",
    "additionalProperties": false,
    "required": ["id", "name", "command", "variables", "tags"],
    "properties": {
      "id": {
        "type": "string",
        "minLength": 1
      },
      "name": {
        "type": "string",
        "minLength": 1
      },
      "description": {
        "type": "string"
      },
      "command": {
        "type": "string",
        "minLength": 1
      },
      "variables": {
        "type": "array",
        "items": {
          "type": "object",
          "additionalProperties": false,
          "required": ["name", "description"],
          "properties": {
            "name": {
              "type": "string",
              "minLength": 1
            },
            "description": {
              "type": "string",
              "minLength": 1
            },
            "default": {
              "type": "string"
            }
          }
        }
      },
      "tags": {
        "type": "array",
        "items": {
          "type": "string",
          "minLength": 1
        },
        "uniqueItems": true
      }
    }
  }
}

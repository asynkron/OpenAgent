{
  "version": 1,
  "description": "Commands in this allowlist may be executed without explicit human confirmation. Scope is conservative: read-only/system-info commands only.",
  "allowlist": [
    {
      "name": "pwd"
    },
    {
      "name": "ls"
    },
    {
      "name": "whoami"
    },
    {
      "name": "id"
    },
    {
      "name": "uname"
    },
    {
      "name": "date"
    },
    {
      "name": "env"
    },
    {
      "name": "printenv"
    },
    {
      "name": "which"
    },
    {
      "name": "whereis"
    },
    {
      "name": "stat"
    },
    {
      "name": "file"
    },
    {
      "name": "cat"
    },
    {
      "name": "head"
    },
    {
      "name": "tail"
    },
    {
      "name": "wc"
    },
    {
      "name": "grep"
    },
    {
      "name": "sed",
      "notes": "non-mutating invocations only (no -i)"
    },
    {
      "name": "awk"
    },
    {
      "name": "find",
      "notes": "non-mutating actions only (no -exec that writes)"
    },
    {
      "name": "tree"
    },
    {
      "name": "df"
    },
    {
      "name": "du"
    },
    {
      "name": "git",
      "subcommands": ["status", "log", "show", "diff", "rev-parse", "branch", "remote", "describe"]
    },
    {
      "name": "python",
      "subcommands": ["--version", "-V"]
    },
    {
      "name": "python3",
      "subcommands": ["--version", "-V"]
    },
    {
      "name": "pip",
      "subcommands": ["list", "show", "--version"]
    },
    {
      "name": "node",
      "subcommands": ["--version", "-v"]
    },
    {
      "name": "npm",
      "subcommands": ["--version", "-v"]
    },
    {
      "name": "curl",
      "notes": "GET/HEAD requests only (no -X POST/PUT/PATCH/DELETE)"
    },
    {
      "name": "wget",
      "notes": "spider or download to stdout only"
    },
    {
      "name": "dig"
    },
    {
      "name": "nslookup"
    },
    {
      "name": "ping",
      "notes": "limit count, e.g., -c 1"
    }
  ],
  "rules": [
    "No in-place edits (e.g., sed -i) or redirections that write to disk (>, >>) under auto-run",
    "No package/system modifications (apt, yum, brew, docker build/run with -v :rw, etc.)",
    "Network calls allowed only for read-only requests"
  ]
}

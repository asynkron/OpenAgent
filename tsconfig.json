{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "noEmitOnError": true
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.d.ts",
    "types/**/*.d.ts",
    "tests/**/*.ts",
    "scripts/**/*.ts",
    "scripts/**/*.cts",
    "index.ts"
  ],
  "exclude": ["node_modules", "coverage", "dist"]
}

{
  "name": "chat-agent-frontend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npm run clean && npm run build:js && npm run build:css",
    "build:js": "node scripts/ensure-esbuild.mjs && esbuild src/js/unified_index.ts --bundle --minify --sourcemap --target=es2018 --outdir=../backend/public/static/dist '--define:process.env.NODE_ENV=\"production\"'",
    "build:css": "node scripts/ensure-esbuild.mjs && esbuild src/css/app.css src/css/theme.css --bundle --minify --outdir=../backend/public/static/dist --loader:.woff2=file --loader:.woff=file --loader:.ttf=file",
    "clean": "rimraf ../backend/public/static/dist"
  },
  "devDependencies": {
    "esbuild": "^0.25.10",
    "rimraf": "^5.0.5"
  },
  "dependencies": {
    "highlight.js": "^11.9.0",
    "marked": "^14.1.2"
  }
}

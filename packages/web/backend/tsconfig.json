{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": false,
    "noEmit": false,
    "declaration": false,
    "sourceMap": false,
    "paths": {}
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["dist", "node_modules", "src/**/*.test.ts", "src/**/__tests__/**"]
}

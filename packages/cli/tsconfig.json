{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "noEmit": false,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "allowJs": false,
    "emitDeclarationOnly": false,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "strict": false,
    "noImplicitAny": false,
    "useUnknownInCatchVariables": false,
    "jsx": "react-jsx",
    "paths": {
      "@asynkron/openagent-core": ["../core/dist/index.js"]
    }
  },
  "include": ["index.ts", "bin/**/*.ts", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["dist", "node_modules", "**/__tests__/**"]
}

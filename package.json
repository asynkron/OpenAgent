{
  "name": "@asynkron/openagent",
  "version": "2.10.0",
  "description": "Simple Node.JS based AI agent",
  "type": "module",
  "main": "index.js",
  "exports": {
    ".": {
      "import": "./index.js",
      "default": "./index.js"
    },
    "./package.json": "./package.json"
  },
  "bin": {
    "openagent": "bin/openagent.js"
  },
  "scripts": {
    "start": "node ./bin/openagent.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "release:verify-tag": "node ./scripts/verify-release-tag.js"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "dotenv": "^17.2.3",
    "marked": "^12.0.2",
    "marked-terminal": "^7.1.0",
    "openai": "^6.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "acorn": "^8.15.0",
    "ajv": "^8.17.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "esprima": "^4.0.1",
    "globals": "^16.4.0",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.3",
    "prettier": "^3.2.5"
  },
  "lint-staged": {
    "*.{js,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}

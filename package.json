{
  "name": "openagent-monorepo",
  "private": true,
  "version": "2.13.55",
  "description": "Monorepo for the OpenAgent CLI and core runtime",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "node ./scripts/dist/start.js",
    "prestart": "npm run build",
    "build": "npm run build --workspace @asynkron/openagent-core && npm run build --workspaces --if-present && npm run build:scripts",
    "build:scripts": "tsc -p tsconfig.scripts.json",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "pretest": "npm run build",
    "typecheck": "tsc --noEmit -p tsconfig.typecheck.json",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "fta": "fta packages --json | jq 'map(select(.assessment != \"OK\"))'",
    "fta-table": "fta packages",
    "preformat": "",
    "preformat:check": "",
    "prelint": "",
    "prepare": "",
    "postinstall": "",
    "release:verify-tag": "npm run build:scripts && node ./scripts/dist/verify-release-tag.js"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.26.0",
    "@eslint/js": "^9.37.0",
    "@types/node": "^22.9.3",
    "@types/react": "^19.0.1",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "acorn": "^8.15.0",
    "ajv": "^8.17.1",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "esprima": "^4.0.1",
    "fta-cli": "^3.0.0",
    "globals": "^16.4.0",
    "ink-testing-library": "^4.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.3",
    "prettier": "^3.2.5",
    "ts-morph": "^23.0.0",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "*.{js,mjs,cjs,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
